generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DeviceData {
  id             Int      @default(autoincrement())
  device_id      String
  temperature    Float
  acceleration   Float[]
  battery        Int
  audio_segment  String?
  timestamp      DateTime @default(now())
  @@id([id, timestamp])
  @@map("DeviceData")
}